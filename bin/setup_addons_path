#!/bin/bash

ADDONS_PATH="/opt/odoo/addons"

ls /opt/odoo

if [ -d "/opt/odoo/odoo-enterprise" ]; then
    ADDONS_PATH="${ADDONS_PATH},/opt/odoo/odoo-enterprise"
fi

if [ -d "/opt/odoo/portugal-plus" ]; then
    ADDONS_PATH="${ADDONS_PATH},/opt/odoo/portugal-plus"
fi

echo $ADDONS_PATH
export ADDONS_PATH
